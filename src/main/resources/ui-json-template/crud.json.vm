{
    "type": "crud",
    "name": "${pageCode}Table",
    "api": "post:/admin/page/crudQuery/${pageCode}",
    "title": "${pageName}",
    "syncLocation": false,
    "filter": {
      "title": ["<span style='line-height:30px;'>${pageName}</span>",
        "<button type='button' onclick='window.location.reload()' style='margin-left:10px;;float:right;position:relative;' class='cxd-Button cxd-Button--sm cxd-Button--default is-active'>刷新页面</button>"
      ,{
          "type":"button",
          "label":"导出Excel",
          "actionType": "url",
          "url":"/admin/page/crudExport/${pageCode}${downloadParam}",
          "className":"m-l float-right relative "
        },{
          "type":"button",
          "label":"重置",
          "actionType":"reset",
          "className":"m-l float-right relative "
        },
        {
          "type":"button",
          "label":"查询",
          "primary":true,
          "actionType":"submit",
          "className":"m-l float-right relative "
        }

      ],
      "submitText": "",
      "mode": "horizontal",
      "body":{
        "type":"grid",
        "columns":${queryConfigs}
      }
    },

    "headerToolbar": ${topButtons},
    "bulkActions": ${bulkButtons},
#if($openPage)
  "footerToolbar": [
    "statistics",
    "switch-per-page",
    "pagination"
  ],
  "perPage":${perPage},
  "perPageAvailable":${perPageAvailable},
#end
  "affixHeader":true
}